procedure TForm5.N1Click(Sender: TObject);
begin
ShellExecute(Handle, 'open', 'Help.chm', nil,nil, SW_NORMAL);
end;

procedure TForm5.N2Click(Sender: TObject);
begin
close;
end;

end.
